        개인정보
        <div>아이디 : <input type="text" name="id" id="id"></div>
        <div>비밀번호 : <input type="text"></div>
        <div>이름 : <input type="text"></div>
        <div>나이 : <input type="text"></div>
        <div>프로필사진 : <input type="file" name="userfile" id="file"></div>
        <button type="reset">리셋</button>
        <button type="button" onclick="fileUpload()">제출</button>
    </form>
    <img src="">
    <script>
        function fileUpload() {
            const formData = new FormData();
            const id = document.getElementById("id").value;
            const file = document.getElementById("file");
            formData.append("id", id);
            formData.append("userfile", file.files[0]);
            axios({
                headers: {
                    "content-type": "multipart/form-data"
                },
                url: "/upload",
                method: "post",
                data: formData
            }).then((response) => {
                console.log(response.data)
                document.querySelector("img").src = "/uploads/" + response.data;
            });



        }
    </script>
